# Environment Configuration for New AWS Account
# Copy this to .env and update with your new account values

# Database Configuration
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_TABLE_NAME=your_db_table_name

# AWS Configuration (NEW ACCOUNT)
AWS_ACCESS_KEY_ID=your_new_account_access_key
AWS_SECRET_ACCESS_KEY=your_new_account_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name  # Make sure this matches your copied bucket name
DYNAMODB_TABLE_NAME=your_dynamodb_table_name

# Google OAuth (you may need new credentials for new domain)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Session Configuration
SESSION_SECRET=your_session_secret

# Domain Configuration
# Update these with your own domain if deploying with SSL/custom domain
CUSTOM_DOMAIN=your-subdomain.yourdomain.com
ROOT_DOMAIN=yourdomain.com
COOKIE_DOMAIN=.yourdomain.com

# Frontend URL (will be updated after ALB deployment)
FRONTEND_URL=http://localhost:3000
